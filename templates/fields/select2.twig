{% spaceless %}
    <div class="form-group">
        {% if field.label %}
            <label for="{{ field.id | e('html_attr') }}" class="col-sm-2 control-label">{{ field.label | e }}</label>
        {% endif %}

        <div class="col-md-{% if field.label %}8{% else %}12{% endif %}">
            <select
                {% if field.multiple %}
                    multiple="multiple"
                {% endif %}

                {% block global_attributes %}
                    id="{{ field.id | e('html_attr') }}"
                    class="{{ field.class | e('html_attr') }} form-control select2"
                    {% if field.style %}
                        style="{{ field.style | e('html_attr') }}"
                    {% endif %}
                    {% if field.label %}
                        title="{{ field.label | e('html_attr') }}"
                    {% endif %}
                {% endblock %}

                {% block input_attributes %}
                    type="{{ field.type | e('html_attr') }}"
                    name="{{ field.name | e('html_attr') }}{% if field.multiple %}[]{% endif %}"

                    {% if field.size %}
                        size="{{ field.size | number_format(0, '', '') }}"
                    {% endif %}

                    {% if field.required %}
                        required="required"
                    {% endif %}

                    {% if field.autoFocus %}
                        autofocus
                    {% endif %}

                    {% if field.disabled %}
                        disabled
                    {% endif %}

                    {% if field.multiple %}
                        multiple="multiple"
                    {% endif %}
                {% endblock %}

                {% block additional_attributes %}
                    {% include 'fields/blocks/additional_attributes.twig' %}
                {% endblock %}

                data-type="select2"
                {% for optionName, optionValue in field.select2options %}
                    data-{{ optionName }}="{{ optionValue }}"
                {% endfor %}
                >
                {% set selected = field.value %}
                {% for name, value in field.options %}
                    {% if value is iterable %}
                        {% set groupOptions = value %}
                        {% include 'fields/cmp/optgroup.twig' %}
                    {% else %}
                        {% include 'fields/cmp/option.twig' %}
                    {% endif %}
                {% endfor %}
            </select>
        </div>
    </div>
{% endspaceless %}
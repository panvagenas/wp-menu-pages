{% extends "fields/blocks/input.twig" %}
{% set type = 'image' %}

{% if height %}
    {% set style = style ~ 'height:' ~ height ~ 'px;' %}
{% else %}
    {% set style = style ~ 'height:auto;' %}
{% endif %}

{% if width %}
    {% set style = style ~ 'width:' ~ width ~ 'px;' %}
{% else %}
    {% set style = style ~ 'width:auto;' %}
{% endif %}

{% block input_attributes %}
    {% if accept %}
        accept="{{ accept | e('html_attr') }}"
    {% endif %}
    {% if alt %}
        alt="{{ alt | e('html_attr') }}"
    {% endif %}
    {% if height %}
        height="{{ height | number_format(0, '', '') }}"
    {% endif %}
    {% if width %}
        width="{{ width | number_format(0, '', '') }}"
    {% endif %}
    {% if src %}
        src="{{ src | e('html_attr') }}"
    {% endif %}
    {{ parent() }}
{% endblock %}
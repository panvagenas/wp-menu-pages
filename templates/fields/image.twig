{% extends "fields/input.twig" %}

{% block input_attributes %}
    {{ parent() }}

    {% if fld.alt %}
        alt="{{ fld.alt | e('html_attr') }}"
    {% endif %}

    {% if fld.height %}
        height="{{ fld.height | e('html_attr') }}"
    {% endif %}

    {% if fld.width %}
        width="{{ fld.width | e('html_attr') }}"
    {% endif %}

    {% if fld.src %}
        src="{{ fld.src | e('html_attr') }}"
    {% endif %}
{% endblock %}

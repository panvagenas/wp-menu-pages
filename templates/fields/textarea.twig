{% spaceless %}

    <div class="form-group">

        {% if field.label %}
            <label for="{{ field.id | e('html_attr') }}" class="col-sm-2 control-label">{{ field.label | e }}</label>
        {% endif %}

        <div class="col-md-{% if field.label %}8{% else %}12{% endif %}">
            <textarea

                cols="{{ cols | e('html_attr') | default(25) }}"
                rows="{{ rows | e('html_attr') | default(5) }}"

                {% block global_attributes %}
                    id="{{ field.id | e('html_attr') }}"
                    class="{{ field.class | e('html_attr') }} form-control wp-menu-pages-input"

                    {% if field.style %}
                        style="{{ field.style | e('html_attr') }}"
                    {% endif %}

                    {% if field.label %}
                        title="{{ field.label | e('html_attr') }}"
                    {% endif %}
                {% endblock %}

                {% block input_attributes %}
                    type="{{ field.type | e('html_attr') }}"
                    name="{{ field.name | e('html_attr') }}"

                    {% if field.maxLength %}
                        maxlength="{{ field.maxLength | number_format(0, '', '') }}"
                    {% endif %}

                    {% if field.placeholder %}
                        placeholder="{{ field.placeholder | e('html_attr') }}"
                    {% endif %}

                    {% if field.required %}
                        required="required"
                    {% endif %}

                    {% if field.autoFocus %}
                        autofocus
                    {% endif %}

                    {% if field.disabled %}
                        disabled
                    {% endif %}
                {% endblock %}

                {% block additional_attributes %}
                    {% include 'fields/blocks/additional_attributes.twig' %}
                {% endblock %}

                >{{ field.value | e }}</textarea>

            {% if field.description %}
                <span id="{{ field.id | e('html_attr') }}" class="help-block field-description">
                        {{ field.description }}
                    </span>
            {% endif %}
        </div>

    </div>

{% endspaceless %}
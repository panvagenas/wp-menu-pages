{% extends "fields/blocks/input.twig" %}
{% set type = 'textarea' %}

{% block input %}
    <textarea
        cols="{{ cols | e('html_attr') | default(25) }}"
        rows="{{ rows | e('html_attr') | default(5) }}"
        {% block global_attributes %}
            {{ parent() }}
        {% endblock %}
        {% block input_attributes %}
            {{ parent() }}
        {% endblock %}
        >{{ value | e }}
    </textarea>
{% endblock %}
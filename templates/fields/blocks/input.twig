{% spaceless %}
    <div class="form-group">
        {% block label %}
            {% include 'fields/blocks/label.twig' %}
        {% endblock %}

        <div class="col-sm-10">
            {% block input %}
                <input
                    {% block global_attributes %}
                        id="{{ id | e('html_attr') }}"
                        class="{{ class | e('html_attr') }} form-control"
                        {% if style %}
                            style="{{ style | e('html_attr') }}"
                        {% endif %}
                    {% endblock %}
                    {% block input_attributes %}
                        type="{{ type | e('html_attr') }}"
                        name="{{ name | e('html_attr') }}"
                        value="{{ value | e('html_attr') }}"

                        {% if autoComplete %}
                            autocomplete="{{ autoComplete | e('html_attr') }}"
                        {% endif %}

                        {% if maxLength %}
                            maxlength="{{ maxLength | number_format(0, '', '') }}"
                        {% endif %}

                        {% if placeholder %}
                            placeholder="{{ placeholder | e('html_attr') }}"
                        {% endif %}

                        {% if size %}
                            size="{{ size | number_format(0, '', '') }}"
                        {% endif %}

                        {% if required %}
                            required="required"
                        {% endif %}

                        {% if autofocus %}
                            autofocus
                        {% endif %}

                        {% if disabled %}
                            disabled
                        {% endif %}

                        {% for attribute in additional_attributes %}
                            {% if attribute.name and attribute.value %}
                                {{ attribute.name | e('html_attr') }}="{{ attribute.value | e('html_attr') }}"
                            {% endif %}
                        {% endfor %}
                    {% endblock %}
                />
            {% endblock %}
        </div>
    </div>
{% endspaceless %}
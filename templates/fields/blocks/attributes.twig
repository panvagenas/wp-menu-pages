{% spaceless %}

    type="{{ field.type | e('html_attr') }}"
    name="{{ field.name | e('html_attr') }}"
    value="{{ field.value | e('html_attr') }}"

    {% if field.autoComplete %}
        autocomplete="{{ field.autoComplete | e('html_attr') }}"
    {% endif %}

    {% if field.maxLength %}
        maxlength="{{ field.maxLength | number_format(0, '', '') }}"
    {% endif %}

    {% if field.placeholder %}
        placeholder="{{ field.placeholder | e('html_attr') }}"
    {% endif %}

    {% if field.size %}
        size="{{ field.size | number_format(0, '', '') }}"
    {% endif %}

    {% if field.required %}
        required="required"
    {% endif %}

    {% if field.autoFocus %}
        autofocus
    {% endif %}

    {% if field.disabled %}
        disabled
    {% endif %}

{% endspaceless %}
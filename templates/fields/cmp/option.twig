<option value="{{ value | e('html_attr') }}"
    {% if selected is iterable %}
        {% if value in selected %}selected="selected"{% endif %}
    {% else %}
        {% if value == selected %}selected="selected"{% endif %}
    {% endif %}
>{{ name | e }}</option>

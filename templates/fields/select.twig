{% spaceless %}
    <div class="form-group">
        {% if label %}
            <label for="{{ id | e('html_attr') }}" class="col-sm-2 control-label">{{ label | e }}</label>
            <div class="col-md-10">
        {% endif %}

        <select
            {% if multiple %}
                multiple
            {% endif %}

            {% block global_attributes %}
                {% include 'fields/blocks/global_attributes.twig' %}
            {% endblock %}

            {% block input_attributes %}
                type="{{ type | e('html_attr') }}"
                name="{{ name | e('html_attr') }}{% if multiple %}[]{% endif %}"

                {% if maxLength %}
                    maxlength="{{ maxLength | number_format(0, '', '') }}"
                {% endif %}

                {% if placeholder %}
                    placeholder="{{ placeholder | e('html_attr') }}"
                {% endif %}

                {% if size %}
                    size="{{ size | number_format(0, '', '') }}"
                {% endif %}

                {% if required %}
                    required="required"
                {% endif %}

                {% if autoFocus %}
                    autofocus
                {% endif %}

                {% if disabled %}
                    disabled
                {% endif %}

                {% if multiple %}
                    multiple="multiple"
                {% endif %}
            {% endblock %}

            {% block additional_attributes %}
                {% include 'fields/blocks/additional_attributes.twig' %}
            {% endblock %}
        >
            {% set selected = value %}
        {% for name, value in options %}
            {% if value is iterable %}
                {% set groupOptions = value %}
                {% include 'fields/cmp/optgroup.twig' %}
            {% else %}
                {% include 'fields/cmp/option.twig' %}
            {% endif %}
        {% endfor %}
        </select>

        {% if label %}
            </div>
        {% endif %}
    </div>
{% endspaceless %}
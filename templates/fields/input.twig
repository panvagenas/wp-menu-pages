{% spaceless %}

    <div class="form-group">

        {% if field.label %}
            <label for="{{ id | e('html_attr') }}" class="col-sm-2 control-label">{{ field.label | e }}</label>
            <div class="col-md-10">
        {% endif %}

        <input

        {% block global_attributes %}
            {% include 'fields/blocks/global_attributes.twig' %}
        {% endblock %}

        {% block input_attributes %}
            {% if field.alt %}
                alt="{{ field.alt | e('html_attr') }}"
            {% endif %}

            {% if field.height %}
                height="{{ field.height | e('html_attr') }}"
            {% endif %}

            {% if field.width %}
                width="{{ field.width | e('html_attr') }}"
            {% endif %}

            {% if field.src %}
                src="{{ field.src | e('html_attr') }}"
            {% endif %}

            {% if field.accept %}
                accept="{{ field.accept | e('html_attr') }}"
            {% endif %}

            {% if field.min %}
                min="{{ field.min | number_format(4, '', '') }}"
            {% endif %}

            {% if field.max %}
                max="{{ field.max | number_format(4, '', '') }}"
            {% endif %}

            {% if field.step %}
                step="{{ field.step | number_format(4, '', '') }}"
            {% endif %}

            {% include 'fields/blocks/attributes.twig' %}
        {% endblock %}

        {% block additional_attributes %}
            {% include 'fields/blocks/additional_attributes.twig' %}
        {% endblock %}

        >
        {% if field.label %}
            </div>
        {% endif %}

    </div>

{% endspaceless %}
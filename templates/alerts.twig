{% for alert in alerts %}
    <div
        class="alert alert-{{ alert.type | e('html_attr') }} {% if alert.dismissible %}alert-dismissible fade in{% endif %}"
        role="alert">
        {% if alert.dismissible %}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        {% endif %}
        {{ alert.content | raw | wp_filter('templates/alerts/content@' ~ menuPage.menuSlug) }}
    </div>
{% endfor %}
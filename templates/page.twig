<div class="wp-menu-pages-ns">
    <div class="container-fluid">
        {##
         # Page header
         #}
        <div class="page-header">
            {{ wp_action('menuPages/templates/page::header::before@' ~ menuPage.menuSlug) }}
            {% include 'header.twig' %}
            {{ wp_action('menuPages/templates/page::header::after@' ~ menuPage.menuSlug) }}
        </div>
        <div class="row">
            {##
             # Alerts
             #}
            <div class="col-md-12 alerts-wrapper">
                {{ wp_action('menuPages/templates/page::alerts::before@' ~ menuPage.menuSlug) }}
                {% include 'alerts.twig' %}
                {{ wp_action('menuPages/templates/page::alerts::after@' ~ menuPage.menuSlug) }}
            </div>
            {##
             # Main
             #}
            <div class="{% if el.containers.aside %}col-md-8{% else %}col-md-12{% endif %}">
                {##
                 # Main content
                 #}
                {{ wp_action('menuPages/templates/page::main::before@' ~ menuPage.menuSlug) }}
                {% for cnr in el.containers.main %}
                    {% include cnr.templateName %}
                {% endfor %}
                {{ wp_action('menuPages/templates/page::main::after@' ~ menuPage.menuSlug) }}
            </div>

            {##
             # Sidebar
             #}
            {% if el.containers.aside %}
                <div class="col-md-4">
                    {{ wp_action('menuPages/templates/page::aside::before@' ~ menuPage.menuSlug) }}
                    {% for cnr in el.containers.aside %}
                        {% include cnr.templateName %}
                    {% endfor %}
                    {{ wp_action('menuPages/templates/page::aside::after@' ~ menuPage.menuSlug) }}
                </div>
            {% endif %}
        </div>
    </div>
</div>